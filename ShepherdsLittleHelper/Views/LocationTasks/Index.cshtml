@model IEnumerable<ShepherdsLittleHelper.Models.LocationTask>

@{
    ViewBag.Title = "Location Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks for Locations</h2>

<p>
    @Html.ActionLink("Create a task", "Create")
</p>
<table class="table hidden-xs">
    <tr>
        <th>
            Location
        </th>
        <th>
            Task
        </th>
        <th>
            Description
        </th>
        <th>
            Frequency
        </th>
        <th>
            Deadline
        </th>
        <th>
            Done
        </th>
        <th></th>
    </tr>

    @foreach (var model in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelmodel => model.Location.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelmodel => model.TaskType.TaskTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelmodel => model.TaskDescription)
            </td>
            <td>
                @Html.DisplayFor(modelmodel => model.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelmodel => model.Deadline)
            </td>
            <td>
                <a href="@Url.Action("ToggleDone", new {id=model.L_TaskID})">
                    @if (model.IsDone)
                {
                        <span class="glyphicon glyphicon-check"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-unchecked"></span>
                    }

                </a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = model.L_TaskID }) |
                @Html.ActionLink("Details", "Details", new { id = model.L_TaskID }) |
                @Html.ActionLink("Delete", "Delete", new { id = model.L_TaskID })
            </td>
        </tr>
    }

</table>
<div class="row container visible-xs">
    @foreach (var model in Model)
    {
        <div class="col-xs-12 xs-task-boxes">
            <b>Location: </b>@Html.DisplayFor(modelmodel => model.Location.LocationName)<br />
            <b>Task: </b>@Html.DisplayFor(modelmodel => model.TaskType.TaskTypeName)<br />
            <b>Description: </b>@Html.DisplayFor(modelmodel => model.TaskDescription)<br />
            <b>Frequency: </b>@Html.DisplayFor(modelmodel => model.Frequency)<br />
            <b>Deadline: </b>@Html.DisplayFor(modelmodel => model.Deadline)<br />
            <b>Done: </b>
            <a href="@Url.Action("ToggleDone", new {id=model.L_TaskID})">
                @if (model.IsDone)
                {
                    <span class="glyphicon glyphicon-check"></span>
                }
                else
                {
                    <span class="glyphicon glyphicon-unchecked"></span>
                }
            </a><br />
            @Html.ActionLink("Edit", "Edit", new { id = model.L_TaskID }) |
            @Html.ActionLink("Details", "Details", new { id = model.L_TaskID }) |
            @Html.ActionLink("Delete", "Delete", new { id = model.L_TaskID })
        </div>
    }
</div>