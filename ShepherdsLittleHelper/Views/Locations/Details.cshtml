@model ShepherdsLittleHelper.Models.Location

@{
    ViewBag.Title = "Details";
}

<h2>Details for @Html.DisplayFor(model => model.LocationName)</h2>

<div class="container" id="locationDet">


    <p><span id="locationDetText">@Html.DisplayNameFor(model => model.Group.GroupName)</span>: @Html.DisplayFor(model => model.Group.GroupName)</p>

    @*<dt>
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>*@
    <p><span id="locationDetText">@Html.DisplayNameFor(model => model.MaxOccupancy)</span>: @Html.DisplayFor(model => model.MaxOccupancy)</p>

    <p><span id="locationDetText">@Html.DisplayNameFor(model => model.LocationNotes)</span>: @Html.DisplayFor(model => model.LocationNotes)</p>

    <h3>Pets in @Html.DisplayFor(model => model.LocationName)</h3>
    @foreach (var pet in ViewBag.pets)
    {
        <p><a href="/Pets/Details/@pet.PetID">@pet.PetName</a></p>
    }
    <br />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.LocationID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
