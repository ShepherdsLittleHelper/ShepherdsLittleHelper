        @foreach (var item in Model)
        {
            <div class="col-md-4 " id="petBoarder">
                @*@Html.DisplayFor(modelItem => item.ImageURL)*@
                @*Use default image if picture not available*@
                <img src="@Url.Content(item.ImageURL)" onerror="this.src='../../Images/file.jpg'" id="petPicture" />
                <br />
                <span id="petName">@Html.DisplayFor(modelItem => item.PetName)</span>
                <br />
                <hr>
                @Html.DisplayNameFor(model => model.Location.LocationName) : @Html.DisplayFor(modelItem => item.Location.LocationName)
                <br />
