                @*<br />*@
                @Html.DisplayNameFor(model => model.Gender) : @*@Html.DisplayFor(modelItem => item.Gender)*@
                @if(item.Gender=="n")
                {
                    <span>Neutered</span>
                }
                @if (item.Gender == "s")
                {
                    <span>Spayed</span>
                }
                @if (item.Gender == "M")
                {
                    <span>Male</span>
                }
                @if (item.Gender == "F")
                {
                    <span>Female</span>
                }

                <br />
                @Html.DisplayFor(modelItem => item.Age) || @Html.DisplayFor(modelItem => item.Birthday)
                <br />
                @Html.DisplayNameFor(model => model.Weight) : @Html.DisplayFor(modelItem => item.Weight)
                @if (item.Weight <= 1)
                {
                    <span>lb</span>
                }
                else
                {
                    <span>lbs</span>
                }
                <br />
                @Html.DisplayNameFor(model => model.PetNotes) : @Html.DisplayFor(modelItem => item.PetNotes)
                <br />
                @Html.ActionLink("Pet task?", "Index", "PetTasks") ||
                @Html.ActionLink("Edit", "Edit", new { id = item.PetID }) ||
                @Html.ActionLink("Details", "Details", new { id = item.PetID }) ||
                @Html.ActionLink("Delete", "Delete", new { id = item.PetID })
